{
  "name": "nodejs-starter",
  "version": "1.0.0",
  "description": "nodejs starter with express and typescript setup",
  "main": "./dist/app.js",
  "type": "module",
  "engines": {
    "node": ">=16.0.0"
  },
  "engineStrict": true,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "start": "node dist/server.js",
    "nodemon": "nodemon -w dist dist/server.js",
    "dev": "concurrently \"tsc -w\" \"npm:nodemon\"",
    "gen:key": "node dist/scripts/genKey.js",
    "db:migrate": "knex migrate:latest --knexfile dist/lib/knex/knexFile.js",
    "db:rollback": "knex migrate:rollback --knexfile dist/lib/knex/knexFile.js",
    "db:seed": "knex seed:run --knexfile dist/lib/knex/knexFile.js"
  },
  "keywords": [],
  "author": "Ajay Singh",
  "license": "ISC",
  "imports": {
    "#src/*": "./dist/*"
  },
  "dependencies": {
    "zod": "^3.20.2",
    "knex": "^2.3.0",
    "mysql2": "^2.3.3",
    "helmet": "^6.0.1",
    "bcrypt": "^5.1.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "cookie-parser": "^1.4.6",
    "express-async-errors": "^3.1.1"
  },
  "devDependencies": {
    "nodemon": "^2.0.20",
    "typescript": "^4.9.3",
    "concurrently": "^7.6.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.14",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/cookie-parser": "^1.4.3"
  }
}
