{
  "name": "nodejs-stater",
  "version": "1.0.0",
  "description": "nodejs starter with express and typescript setup",
  "main": "./dist/app.js",
  "type": "module",
  "engines": {
    "node": ">=16.0.0"
  },
  "engineStrict": true,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node dist/app.js",
    "build": "tsc",
    "dev": "concurrently \"tsc -w\" \"npm:nodemon\"",
    "nodemon": "nodemon -w dist dist/app.js",
    "migrate": "knex migrate:latest --knexfile dist/db/knexfile.js",
    "rollback": "knex migrate:rollback --knexfile dist/db/knexfile.js"
  },
  "keywords": [],
  "author": "Ajay Singh",
  "license": "ISC",
  "imports": {
    "#src/*": "./dist/*"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "ejs": "^3.1.8",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "knex": "^2.3.0",
    "mysql2": "^2.3.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.20",
    "typescript": "^4.9.3"
  }
}
